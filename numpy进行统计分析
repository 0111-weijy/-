arr=np.arange(20),reshape(4,5)
print(arr)
print(np.sum(arr))
print(np.sum(arr,axis=0))
print(np.sum(arr,axis=1))
print(np.mean(arr))
print(np.mean(arr,axis=0))
print(np.mean(arr,axis=1))
print(np.std(arr))
print(np.var(arr))
print(np.min(arr))
print(np.max(arr))
print(np.argmin(arr))
print(np.argmax(arr))
arr=np.arange(2,10)
print(arr)
print(np.cumsum(arr))   #计算所有元素的累计和
print(np.cumprod(arr))  #计算所有元素的累计积

